---
export interface Props {
  posts: any[];
}
const { posts } = Astro.props;
---

<section class="max-w-4xl mx-auto py-16 px-4">
  <ul class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
    {posts.map((post) => (
      <li class="bg-white rounded-2xl shadow hover:shadow-lg transition flex flex-col h-full p-6 border border-gray-100">
        <a href={`/blog/${post.slug}`} class="flex-1">
          <h2 class="text-xl font-bold text-dark-blue mb-2 hover:text-gold transition">{post.data.title}</h2>
        </a>
        <p class="text-sm text-gray-500 mb-2">
          {new Date(post.data.date).toLocaleDateString(undefined, { year: "numeric", month: "long", day: "numeric" })}
          {post.data.author && <> &middot; {post.data.author}</>}
        </p>
        <p class="text-gray-700 line-clamp-3">{post.data.excerpt}</p>
        <div class="mt-4">
          <a
            href={`/blog/${post.slug}`}
            class="inline-block text-sm font-medium text-gold hover:underline"
            aria-label={`Read: ${post.data.title}`}
          >
            Read More &rarr;
          </a>
        </div>
      </li>
    ))}
  </ul>
</section>
